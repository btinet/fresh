{% extends 'base.html.twig' %}

{% block body %}
    {% block navigation %}
        <div class="container">
            <h1>Navigation</h1>
        </div>
    {% endblock %}
    {% block flash_messages %}
        {{ flash|raw }}
    {% endblock %}
    <div id="loading-wrapper" class="opacity-0 text-emphasised">
        <svg width="100" height="100" version="1.1" id="L6" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
             viewBox="0 0 100 100" enable-background="new 0 0 100 100" xml:space="preserve">
   <rect fill="none" stroke="#fff" stroke-width="4" x="25" y="25" width="50" height="50">
       <animateTransform
               attributeName="transform"
               dur="0.5s"
               from="0 50 50"
               to="180 50 50"
               type="rotate"
               id="strokeBox"
               attributeType="XML"
               begin="rectBox.end"/>
   </rect>
            <rect x="27" y="27" fill="#fff" width="46" height="50">
                <animate
                        attributeName="height"
                        dur="1.3s"
                        attributeType="XML"
                        from="50"
                        to="0"
                        id="rectBox"
                        fill="freeze"
                        begin="0s;strokeBox.end"/>
            </rect>
</svg>
    </div>
    <main class="flex-grow-1" id="page">
        {% block content %}{% endblock %}
    </main>
    {% block footer %}
        <footer class="bg-dark text-light py-1 mt-5">
            <div class="container">
                <span class="small">Copyright &copy;2021 - Benjamin Wagner</span>
                <a href="{{ route('imprint') }}" class="text-light ms-2 small">Impressum</a>
                <a href="{{ route('terms') }}" class="text-light ms-2 small">Nutzungsbedingungen</a>
            </div>
        </footer>
    {% endblock %}

{% endblock %}
